<div class="container">
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %> </td>
        <td><%= task.body %> </td>
        <td class = "button"><%= link_to "Delete Task", category_task_path(task.category_id, task), method: :delete %></td>
      <tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Task', new_category_task_path(@category) %>
</div>

