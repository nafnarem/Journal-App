<div class = "banner">
  <h1>To do list</h1>
  <div class = "new_category">
      <%= link_to "Add to do list", new_category_path %>
  </div>
</div>

<div class="container">
  <div class = "header">
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Title</th>
      </tr>
    </thead>
    <tbody>
    <div>
      <% @categories.each do |category| %>
      <tr class = "label_box">
        <td class = "id_container"><%= category.id %></td>
        <td class = "name_container"><%= category.name %></td>
        <!--<td class = "body_container"><%= category.body %></td>-->
        <div class = "buttons">
        <td class = "button"><%= link_to "Edit", edit_category_path(category.id) %></td>
        <td class = "button"><%= link_to "Delete", category_path(category.id), method: :delete %></td>
        <td class = "button"><%= link_to "Show", category_path(category)%></td>
        
        <td class = "button"><%= link_to 'Show Tasks', category_tasks_path(category.id) %></td>
        <td class = "button"><%= link_to 'Add Task', new_category_task_path(category) %></td>

      </div>
      </tr>
      
      <%end%>
    </tbody>
  </table>
  </div>
