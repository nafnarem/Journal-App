<%= form_with scope: :category, model:@category , method: :put, locale: true do |f| %>
    <div class = "container">
      <div>
        <% if @category.errors.any? %>
          <ul>
            <% @category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class = "form_title">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      
      <div class = "form_body">
        <%= f.label :body %>
        <%= f.text_field :body %>
      </div>
      
      <div>
        <%= f.submit :'Save Game'%>
      </div>
      <% end %>
    </div>